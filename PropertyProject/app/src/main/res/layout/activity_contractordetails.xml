<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contractordetails">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarofcontractordetails"
        android:background="@color/white">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Field"
            android:textColor="@color/black"
            android:id="@+id/fieldofcontractordetails">

        </TextView>


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/nameofcontractordetails"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbarofcontractordetails"
        android:layout_marginTop="-3dp"
        android:background="@color/white"
        android:gravity="top|left"
        android:hint="Name"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/areaofcontractordetails"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbarofcontractordetails"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:gravity="top|left"
        android:hint="Area"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/numberofcontractordetails"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbarofcontractordetails"
        android:layout_marginTop="104dp"
        android:background="@color/white"
        android:gravity="top|left"
        android:hint="Number"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/rateofcontractordetails"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbarofcontractordetails"
        android:layout_marginTop="158dp"
        android:background="@color/white"
        android:gravity="top|left"
        android:hint="Rate"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="18sp">

    </TextView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="bottom|end"
        android:id="@+id/gotoeditcontractor"
        android:src="@drawable/ic_baseline_edit_24"
        app:maxImageSize="40dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>